<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_view"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/multi_camera_title" />

    <LinearLayout
        android:id="@+id/camera_video_view_Rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <com.thingclips.smart.camera.middleware.widget.ThingCameraView
            android:id="@+id/multi_video_1"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <com.thingclips.smart.camera.middleware.widget.ThingCameraView
            android:id="@+id/multi_video_2"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

    </LinearLayout>

<!--    <com.thingclips.smart.camera.middleware.widget.ThingMultiCameraView-->
<!--        android:id="@+id/multi_video"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->
</LinearLayout>